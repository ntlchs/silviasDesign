---
import Social from "./Social.astro";

const address = "Av. Maur√≠cio Cardoso, 123 - Feliz/RS";
---

<footer class="pinkBg">
  <div id="social">
    <Social platform="instagram" username="silviasdesign" />
    <Social platform="facebook" username="silvia" />
  </div>
  <p>{address}</p>
</footer>

<style>
  footer {
    background-color: white;
    height: fit-content;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    row-gap: 1vh;
    position: fixed;
    width: 100vw;
    bottom: 0px;
    overflow: hidden;
    font-size: 14px;
    padding: 0.5rem;
  }

  a {
    font-size: 14px;
  }

  p,
  #social {
    align-items: baseline;
    margin: 0;
    padding: 0;
  }
</style>
