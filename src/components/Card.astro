---
const { title, subtitle } = Astro.props;
---

<div id="page_content">
  <div id="title">
    <h1 class="golden line"><span>{title}</span></h1>
  </div>
  <h2>{subtitle}</h2>
  <slot />
</div>

<style>
  #title {
    padding-bottom: 0.1rem;
  }
  h1 span {
    font-size: 60px;
    align-self: baseline;
    max-width: max-content;
  }

  #page_content {
    text-align: center;
    max-width: 100vw;
    padding: 1rem;
  }

  h2 {
    font-weight: normal;
    font-size: 1.5rem;
  }
</style>
