---
import Hamburger from "../components/Hamburger.astro";
---

<header class="pinkBg">
  <Hamburger />
</header>

<style>
  @media screen and (min-width: 636px) {
    header {
      position: absolute;
      top: 0px;
      left: 0px;
      height: 10vh;
      right: 0px;
      overflow: hidden;
    }
    header a {
      font-size: 50px;
      display: flex;
      justify-content: space-around;
    }
  }
</style>
